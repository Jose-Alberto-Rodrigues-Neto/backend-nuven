generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  nome String
  email String @unique
  senha_hash String
  datasets Dataset[]
  queries Query[]
}

model Dataset{
  id String @id @default(uuid())
  nome String
  usuario_id String @unique
  usuario User @relation(fields: [usuario_id], references: [id])
  criado_em DateTime @default(now())
  records Record[]
}

model Record{
  id String @id @default(uuid())
  dataset_id String
  dataset Dataset @relation(fields: [dataset_id], references: [id])
  dados_json Json
  criado_em DateTime @default(now())
}

model Query{
  id String @id @default(uuid())
  usuario_id String @unique
  usuario User @relation(fields: [usuario_id], references: [id])
  pergunta String
  resposta String
  criado_em DateTime @default(now())
}